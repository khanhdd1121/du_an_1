<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Head.Registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Đăng ký"
            android:textStyle=""
            android:textSize="35dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:background="@drawable/custom_linearlayout"
        android:layout_height="450dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="320dp"
                android:drawableStart="@drawable/name"
                android:id="@+id/ed_taiKhoan"
                android:paddingLeft="10dp"
                android:background="@drawable/custom_editext"
                android:hint="Tên tài khoản"
                android:layout_height="45dp">
            </EditText>
            <EditText
                android:layout_width="320dp"
                android:hint="Họ và tên"
                android:paddingLeft="10dp"
                android:background="@drawable/custom_editext"
                android:drawableStart="@drawable/ic_adduser"
                android:id="@+id/ed_hovaten"
                android:layout_marginTop="25dp"
                android:layout_height="45dp">
            </EditText>
            <EditText
                android:layout_width="320dp"
                android:layout_marginTop="25dp"
                android:paddingLeft="10dp"
                android:background="@drawable/custom_editext"
                android:drawableStart="@drawable/ic_phone"
                android:id="@+id/ed_dienthoaiDK"
                android:hint="Điện thoại"
                android:layout_height="45dp">
            </EditText>
            <EditText
                android:layout_width="320dp"
                android:paddingLeft="10dp"
                android:background="@drawable/custom_editext"
                android:drawableStart="@drawable/ic_matkhau"
                android:hint="Mật khẩu"
                android:id="@+id/ed_matkhauDK"
                android:layout_marginTop="25dp"
                android:layout_height="45dp">
            </EditText>
            <EditText
                android:layout_width="320dp"
                android:hint="Nhập lại mật khẩu"
                android:drawableStart="@drawable/ic_matkhau"
                android:id="@+id/ed_nhaplaiMK"
                android:paddingLeft="10dp"
                android:background="@drawable/custom_editext"
                android:layout_marginTop="25dp"
                android:layout_height="45dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="150dp"
                android:text="Đăng ký"
                android:id="@+id/btn_dangkyTK"
                android:backgroundTint="#00BFFF"
                android:layout_marginLeft="35dp"
                android:layout_height="40dp">
            </Button>
            <Button
                android:layout_width="150dp"
                android:text="Hủy"
                android:id="@+id/btn_huyDK"
                android:backgroundTint="#00BFFF"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp">
            </Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            android:text="Đã có tài khoản ?"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#ff0000"
            android:id="@+id/tv_danngnhap"
            android:textStyle="normal|bold"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"></TextView>
    </LinearLayout>
</LinearLayout>